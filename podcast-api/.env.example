# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/podcast-app

# JWT secret for authentication
JWT_SECRET=your_jwt_secret_key

# Environment
NODE_ENV=production

# Client URL (for CORS)
CLIENT_URL=https://podcast-client.up.railway.app

# API URL (for self-referencing API calls)
API_URL=https://podcast-api.up.railway.app

# Port (Railway will set this automatically)
PORT=3001